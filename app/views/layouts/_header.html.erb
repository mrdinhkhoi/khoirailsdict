<header class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <%= link_to "Rails dict", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path, {:style=>"color:#fff !important;"} %></li>
        <% if logged_in? %>
          <% if current_user.admin? %>
                <li><%= link_to "Users", users_path, {:style=>"color:#fff !important;"} %></li>
                <li><%= link_to "New post", newp_path, {:style=>"color:#fff !important;"} %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color:#fff">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path, {:style=>"color:#fff !important;"} %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>