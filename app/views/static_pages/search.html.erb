<% provide(:title, "Trang chủ") %>
<body>
  <div class = "container">
    <p class="railsdict">RAILS DICT</p><br>
    <div class="col-md-6 col-md-offset-3">
    <%= form_tag(posts_path, :method => "get", id: "search-form") do %>
      <div class="input-group " >
        <%= text_field_tag :search, params[:search],class: "form-control input-lg", 
                            placeholder: "Tìm theo tiêu đề", autofocus: true %>
        <div class="input-group-addon">
          <button type="submit" class="btn-link">
          <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
          </button>
        </div>
      </div>
    <% end %>
    </div>
    <div class="col-md-4 col-md-offset-4">
      <br><p> Language : <a href="#">English </a>   <a href="#"> Tieng Viet</a> </p>
    </div>
    <!--most use tags -->
    <div class="tags col-md-6 col-md-offset-3"> Tags :
      <%= raw ActsAsTaggableOn::Tag.most_used(30).map { |t| link_to t, tag_path(t.name)}.join(', ') %>
    </div>

  </div>

</body>