<% provide(:title, "Log in") %>
<div class = "container">
  <div class="center"><h1 style="color:#DD4814 !important;">Log in</h1></div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:session, url: login_path) do |f| %>

        
        <%= f.email_field :email, class: 'form-control', placeholder: "..Email..",autofocus: true %><br>

        
        <%= f.password_field :password, class: 'form-control',placeholder: "..Password.." %><br>

        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %><br>
          <p style="color:#DD4814 !important;">Remember me on this computer</p>
        <% end %>
        
        <%= f.submit "Log in", class: "btn btn-default" %>
      <% end %> <br>

      <p style="color:#DD4814 !important;">New user? <%= link_to "Sign up now!", signup_path %></p>
    </div>
  </div>
</div>