<%= form_for(@newpost) do |f| %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <% if @newpost.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">
            <h2>
              <%= pluralize(@newpost.errors.count, "error") %> prohibited this newpost from being saved:
            </h2>
          </div>
            <ul>
            <% @newpost.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
    </div>
    <div class="col-md-8 col-md-offset-2">
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title, class: "form-control", placeholder: "Type your title" %>
      </div>
      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_area :description, :class => 'ckeditor'%>
      </div>
      <div class="field">
        <%= f.label :tag_list, "Tags" %><br />
        <%= f.text_field :tag_list %>
      </div>
      <button type="submit" class="btn btn-primary">Save</button>
      <%= link_to 'Back', newposts_path, class: "btn btn-warning" %>
    </div>
  </div>
<% end %>


