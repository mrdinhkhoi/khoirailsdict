<body>
  <div class = "container">
    <div class = "col-md-10 col-md-offset-1">
      <div class = "post_info">
        <span><%= @newpost.created_at %></span>&nbsp;&nbsp;
        <span>Tags: <strong><%= raw @newpost.tag_list.map { |t| link_to t, tag_path(t),{:style=>"color:#DD4814 !important;"} }.join(', ') %></strong>
        </span>&nbsp;
        <span>
          Views: <strong><%= @newpost.count %></strong>
        </span>
        <span class = "">
          <% if logged_in? %>
            <% if current_user.admin? %>
              <%= link_to raw( "<span class = 'glyphicon glyphicon-edit'> Edit</span>") , edit_newpost_path(@newpost), class: "btn btn-link" %> 
            <% end %>
          <% end %>
        </span>
      </div>
      <div class = 'title'>
        <%= @newpost.title %>
      </div>
      <div class="description">
        <%=raw @newpost.description%>
      </div><br>
      <!--FB comment -->
      <div class='comment'>
        BÌNH LUẬN
      </div>
      <div id="fb-root"><div class="fb-comments" data-href="<%= @newpost_path %>" data-width="100%" data-num-posts="2"></div></div>
    </div>
  </div>
  
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/vi_VN/all.js#xfbml=1&appId=504323752911178";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
</body>

